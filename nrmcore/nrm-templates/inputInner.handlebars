{{! intended for use within other partials for input controls }}
<input id="{{id}}" class="form-control{{#if className}} {{className}}{{/if}}" 
type="{{#if inputType}}{{inputType}}{{else}}text{{/if}}" value="{{value}}"{{#if title}} title="{{title}}"{{/if}}
{{#if required}} required{{/if}}{{#if disabled}} disabled{{/if}}{{#if readonly}} readonly{{/if}}{{#if @form}} form="{{@form}}"{{/if}}
{{#if min}} min="{{min}}"{{/if}}{{#if max}} max="{{max}}"{{/if}}{{#if step}} step="{{step}}"{{/if}}{{#if minlength}} minlength="{{minlength}}"{{/if}}
{{#if maxlength}} maxlength="{{maxlength}}"{{/if}}{{#if pattern}} pattern="{{pattern}}"{{/if}}{{#if placeholder}} placeholder="{{placeholder}}"{{/if}}/>

